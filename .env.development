# ==================================================
# Mirai IT Knowledge System - Development Environment
# 開発環境設定
# ==================================================

# 環境識別
FLASK_ENV=development
FLASK_DEBUG=True
ENVIRONMENT=development

# ネットワーク設定
HOST=192.168.0.187
PORT=8888

# アクセスURL
BASE_URL=https://192.168.0.187:8888

# データベース設定
DATABASE_PATH=db/knowledge_dev.db
DATABASE_BACKUP_PATH=backups/dev

# ログ設定
LOG_LEVEL=DEBUG
LOG_PATH=data/logs/dev
LOG_FILE=mirai_knowledge_dev.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# SSL/TLS設定
SSL_ENABLED=True
SSL_CERT=/etc/ssl/mirai-knowledge/dev-cert.pem
SSL_KEY=/etc/ssl/mirai-knowledge/dev-key.pem

# サンプルデータ設定
USE_SAMPLE_DATA=True
SAMPLE_DATA_COUNT=7

# ワークフロー設定
WORKFLOW_TIMEOUT=300
SUBAGENT_PARALLEL=True
SUBAGENT_TIMEOUT=60

# SubAgent設定（7体すべて有効）
SUBAGENT_ARCHITECT_ENABLED=True
SUBAGENT_KNOWLEDGE_CURATOR_ENABLED=True
SUBAGENT_ITSM_EXPERT_ENABLED=True
SUBAGENT_DEVOPS_ENABLED=True
SUBAGENT_QA_ENABLED=True
SUBAGENT_COORDINATOR_ENABLED=True
SUBAGENT_DOCUMENTER_ENABLED=True

# Hooks設定（5種すべて有効）
HOOK_PRE_TASK_ENABLED=True
HOOK_POST_TASK_ENABLED=True
HOOK_DUPLICATE_CHECK_ENABLED=True
HOOK_DEVIATION_CHECK_ENABLED=True
HOOK_AUTO_SUMMARY_ENABLED=True

# MCP統合設定
MCP_CONTEXT7_ENABLED=True
MCP_CLAUDE_MEM_ENABLED=True
MCP_GITHUB_ENABLED=True
MCP_BRAVE_SEARCH_ENABLED=True
MCP_PLAYWRIGHT_ENABLED=True

# セキュリティ設定
SECRET_KEY=dev-secret-key-change-in-production
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# パフォーマンス設定
CACHE_ENABLED=True
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# デバッグ設定
DEBUG_TB_ENABLED=True
DEBUG_TB_INTERCEPT_REDIRECTS=False

# Git設定
GIT_BRANCH=develop
GIT_AUTO_COMMIT=False

# バックアップ設定
AUTO_BACKUP_ENABLED=True
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=7

# 通知設定（開発環境では無効）
NOTIFICATION_ENABLED=False

# メンテナンスモード
MAINTENANCE_MODE=False
