# ==================================================
# Mirai IT Knowledge System - Production Environment
# 本番環境設定
# ==================================================

# 環境識別
FLASK_ENV=production
FLASK_DEBUG=False
ENVIRONMENT=production

# ネットワーク設定
HOST=192.168.0.187
PORT=5000

# アクセスURL
BASE_URL=https://192.168.0.187:5000

# データベース設定
DATABASE_PATH=db/knowledge.db
DATABASE_BACKUP_PATH=backups/prod

# ログ設定
LOG_LEVEL=INFO
LOG_PATH=data/logs/prod
LOG_FILE=mirai_knowledge_prod.log
LOG_MAX_BYTES=52428800
LOG_BACKUP_COUNT=10

# SSL/TLS設定
SSL_ENABLED=True
SSL_CERT=/etc/ssl/mirai-knowledge/prod-cert.pem
SSL_KEY=/etc/ssl/mirai-knowledge/prod-key.pem

# サンプルデータ設定
USE_SAMPLE_DATA=False
SAMPLE_DATA_COUNT=0

# ワークフロー設定
WORKFLOW_TIMEOUT=300
SUBAGENT_PARALLEL=True
SUBAGENT_TIMEOUT=60

# SubAgent設定（7体すべて有効）
SUBAGENT_ARCHITECT_ENABLED=True
SUBAGENT_KNOWLEDGE_CURATOR_ENABLED=True
SUBAGENT_ITSM_EXPERT_ENABLED=True
SUBAGENT_DEVOPS_ENABLED=True
SUBAGENT_QA_ENABLED=True
SUBAGENT_COORDINATOR_ENABLED=True
SUBAGENT_DOCUMENTER_ENABLED=True

# Hooks設定（5種すべて有効）
HOOK_PRE_TASK_ENABLED=True
HOOK_POST_TASK_ENABLED=True
HOOK_DUPLICATE_CHECK_ENABLED=True
HOOK_DEVIATION_CHECK_ENABLED=True
HOOK_AUTO_SUMMARY_ENABLED=True

# MCP統合設定
MCP_CONTEXT7_ENABLED=True
MCP_CLAUDE_MEM_ENABLED=True
MCP_GITHUB_ENABLED=True
MCP_BRAVE_SEARCH_ENABLED=True
MCP_PLAYWRIGHT_ENABLED=True

# セキュリティ設定
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_IN_PRODUCTION
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# パフォーマンス設定
CACHE_ENABLED=True
CACHE_TYPE=filesystem
CACHE_DIR=/tmp/mirai-knowledge-cache
CACHE_DEFAULT_TIMEOUT=600

# デバッグ設定（本番では無効）
DEBUG_TB_ENABLED=False
DEBUG_TB_INTERCEPT_REDIRECTS=False

# Git設定
GIT_BRANCH=main
GIT_AUTO_COMMIT=False

# バックアップ設定
AUTO_BACKUP_ENABLED=True
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30

# 通知設定
NOTIFICATION_ENABLED=False

# メンテナンスモード
MAINTENANCE_MODE=False
